<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ThemeCoolechera"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewIconoBuscarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/action_example" />

    <TextView
        android:id="@+id/textViewTituloBuscarProducto"
        style="@style/ThemeCoolechera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/imageViewIconoBuscarProducto"
        android:gravity="start"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle"
        android:textColor="#09c"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewSubTituloBuscarProducto"
        style="@style/ThemeCoolechera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTituloBuscarProducto"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imageViewIconoBuscarProducto"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageViewSiguienteBuscarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewIconoBuscarProducto"
        android:layout_margin="5dp"
        android:contentDescription="@string/action_example"
        android:src="@drawable/ic_navigation_next_item" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/imageViewSiguienteBuscarProducto"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:background="#ff4444" />

</RelativeLayout>