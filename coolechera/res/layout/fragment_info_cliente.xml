<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.coolechera.VentasActivity" >

    <TextView
        android:id="@+id/textViewRazonSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#09c"
        android:textSize="16sp" />

    <View
        android:id="@+id/viewLineaSuperior"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/textViewRazonSocial"
        android:layout_marginTop="10dp"
        android:background="#ff4444" />

    <TableLayout
        android:id="@+id/tableLayoutInfoCliente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLineaSuperior"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_r_legal" />

            <TextView
                android:id="@+id/textViewRepresentante"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_nit" />

            <TextView
                android:id="@+id/textViewNIT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_direccion" />

            <TextView
                android:id="@+id/textViewDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_barrio" />

            <TextView
                android:id="@+id/textViewBarrio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_telefono" />

            <TextView
                android:id="@+id/textViewTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_codigo" />

            <TextView
                android:id="@+id/textViewCodigo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/viewLineaMedia"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tableLayoutInfoCliente"
        android:layout_marginTop="5dp"
        android:background="#ff4444" />

    <TextView
        android:id="@+id/section_label_info_venta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLineaMedia"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="@string/section_label_info_venta" />

    <TableLayout
        android:id="@+id/tableLayoutInfoVenta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label_info_venta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_Valor" />

            <TextView
                android:id="@+id/textViewValor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_iva" />

            <TextView
                android:id="@+id/textViewValorIva"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="@string/label_Total" />

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/viewLineaInferior"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tableLayoutInfoVenta"
        android:layout_marginTop="5dp"
        android:background="#ff4444" />

</RelativeLayout>